{
  "name": "slydo",
  "version": "0.1.1-2",
  "description": "Scaffoldly Command Line Interface",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/scaffoldly/slydo#readme",
  "repository": {
    "url": "https://github.com/scaffoldly/slydo"
  },
  "bugs": {
    "url": "https://github.com/scaffoldly/slydo/issues"
  },
  "author": "Scaffoldly",
  "license": "MPL-2.0",
  "scripts": {
    "prepare": "husky install",
    "build": "webpack",
    "start": "node --trace-warnings -r ts-node/register -r tsconfig-paths/register cli/index.ts",
    "check-lint": "eslint .",
    "lint": "eslint . --fix",
    "check-format": "prettier --check .",
    "format": "prettier --write ."
  },
  "bin": {
    "slydo": "dist/main.js"
  },
  "files": [
    "dist/**/*"
  ],
  "devDependencies": {
    "@types/node": "^17.0.42",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "ts-loader": "^9.3.0",
    "ts-node": "^10.8.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.10.0"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": 1
    },
    "ignorePatterns": [
      "build",
      "dist",
      "node_modules",
      "yarn.lock"
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "all",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2
  }
}